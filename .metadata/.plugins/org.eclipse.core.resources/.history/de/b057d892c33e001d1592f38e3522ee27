package string;

public class StringExample4 {

	public static void main(String[] args) {
	
		String s = "Bangaloreabcxyza";
		
		int i = s.indexOf('l');
		System.out.println(i); // 1
		
		int j = s.lastIndexOf('l');
		System.out.println(j); // 4
		
		int index = StringExample4.findIndex(s, 'a', 5);
		if(index == -1)
		{
			System.out.println("Those many occurances are not there..");
		}
		else
		{
			System.out.println(index);
		}
	}
	
	public static int findIndex(String s, char c, int occuranceValue)
	{
		int count = 0;
		int index = -1;
		for(int i=0; i<s.length(); i++)
		{
			if(s.charAt(i) == 'a')
			{
				count ++; // 0+1+1 = 2
			}
			
			if(count == occuranceValue)
			{
				index = i;
				System.out.println(i);
				break;
			}
		}
		
		return index;
	}
	
}
